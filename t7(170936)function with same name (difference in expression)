#include<iostream>
using namespace std;

int plus(int num1,int num2)
{
	return(num1+num2);
}

int plus(int num1,int num2,int num3)
{
	return(num1+num2+num3);
}

int main(void)
{
	int num1,num2,num3;

	cout<<"input num1,num2,num3 : ";
	cin>>num1>>num2>>num3;

	cout<<"result num1+num2 = "<<plus(num1,num2)<<endl;
	cout<<"result num1+num2+num3 = "<<plus(num1,num2,num3)<<endl;
}
