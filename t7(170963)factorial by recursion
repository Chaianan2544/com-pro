#include<iostream>
using namespace std;

int sum(int n)
{
	if(n>1)
	{
		return(n+sum(n-1));
	}
	else
	{
		return(1);
	}
}

int fac(int num)
{
	if(num>1)
	{
		return(num*fac(num-1));
	}
	else
	{
		return(1);
	}
}

int main(void)
{
	int number=5;
	cout<<"Summation of 5 = "<<sum(number)<<endl;
	cout<<"Factorial of 5 = "<<fac(number)<<endl;
}
